(define (domain cooking)
    (:requirements :strips :typing)
    (:predicates
        (available ?x - vegetable)
        (is-whole ?x - vegetable)
        (is-sliced ?x - vegetable)
        (free ?r - robot)
        (carry ?r - robot ?t - tool)
        (can-cut ?t - tool)
        (at ?x - vegetable ?l - location)
        (is-workspace ?l - location)
    )
    (:action pick
        :parameters (?r - robot ?x - vegetable ?l - location)
        :precondition (and (free ?r) (available ?x) (at ?x ?l))
        :effect (and 
            (not (free ?r)) 
            (not (available ?x)) 
            (carry ?r ?x)
        )
    )
    (:action place
        :parameters (?r - robot ?x - vegetable ?l - location)
        :precondition (and (carry ?r ?x) (not (at ?x ?l)))
        :effect (and 
            (not (carry ?r ?x))
            (free ?r)
            (available ?x)
            (at ?x ?l)
        )
    )
    (:action slice
        :parameters (?r - robot ?t - tool ?x - vegetable ?l - location)
        :precondition (and 
            (carry ?r ?t)
            (can-cut ?t)
            (is-workspace ?l)
            (is-whole ?x)
            (at ?x ?l)
        )
        :effect (and 
            (not (is-whole ?x))
            (is-sliced ?x)
        )
    )
)